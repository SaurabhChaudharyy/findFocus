{
  "manifest_version": 3,
  "name": "Website Blocker",
  "version": "1.0",
  "description": "Block distracting websites to improve focus",
  "permissions": ["storage", "webRequest", "declarativeNetRequest"],
  "action": {
    "default_title": "Website Blocker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
